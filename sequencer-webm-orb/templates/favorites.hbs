<div class="favorites-view">
  <aside class="sidebar">
    <div class="actions">
      <button data-action="create-fav"><i class="fas fa-plus"></i> 新建</button>
      <button data-action="rename-fav"><i class="fas fa-i-cursor"></i> 重命名</button>
      <button data-action="delete-fav" class="danger"><i class="fas fa-trash"></i> 删除</button>
    </div>
    <div class="fav-list">
      {{#if hasNames}}
        {{#each favEntries as |e|}}
        <div class="fav-item {{#if e.active}}active{{/if}}" data-name="{{e.name}}">
          <i class="fas fa-folder-star"></i> {{e.name}} <span class="count">{{e.count}}</span>
        </div>
        {{/each}}
      {{else}}
        <div class="empty">尚无收藏夹，点击“新建”。</div>
      {{/if}}
    </div>
  </aside>

  <section class="content">
    {{#if activeFav}}
      <div class="fav-header">
        <h3><i class="fas fa-star"></i> {{activeFav}}</h3>
      </div>
      {{#if hasFiles}}
        <div class="grid">
          {{#each files as |f|}}
          <div class="fav-file" data-path="{{f.path}}" title="{{f.path}}">
            <div class="thumb"><video class="preview" muted loop preload="metadata" playsinline></video><i class="fas fa-film fallback"></i></div>
            <div class="name">{{f.name}}</div>
            <button class="remove" title="移出该收藏夹"><i class="fas fa-times"></i></button>
          </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty">该收藏夹为空。</div>
      {{/if}}
    {{else}}
      <div class="empty big">请选择左侧一个收藏夹。</div>
    {{/if}}
  </section>
</div>